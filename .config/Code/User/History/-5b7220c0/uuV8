# Use an official Python base image
FROM python:latest

RUN pip install paho-mqtt
RUN pip install mysql-connector-python

# Sets the working directory for your app. This will influence the following COPY and CMD commands
WORKDIR /usr/src/myapp

# Copy the required files from the VM to the container (docker) image
COPY app-sub.py .

# Run app.py inside the image filesystem
CMD python3 app-sub.py
